<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yunmuq.kingyanplus.mapper.UserMapper">
    <!--login和StpInterfaceImpl要重复查询一次-->
<!--    <cache-->
<!--            eviction="LRU"-->
<!--            flushInterval="1000"-->
<!--            size="512"-->
<!--            readOnly="true"/>-->

    <select id="selectUserByUserName" resultMap="UserRole">
        SELECT *
        FROM kingyan_plus.user
        WHERE name = #{userName}
    </select>

    <select id="selectRolesByUserId" resultType="string">
        SELECT r.name
        FROM user_role ur,
             role r
        WHERE ur.role_id = r.id
          AND ur.user_id = #{id}
    </select>

    <resultMap id="UserRole" type="com.yunmuq.kingyanplus.dto.User" autoMapping="true">
        <collection property="roles" column="id" ofType="string" autoMapping="true"
                    select="selectRolesByUserId" javaType="arraylist">
        </collection>
    </resultMap>
</mapper>